{
  "compilerOptions": {
    "module": "ES6",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",
    "moduleResolution": "node",
    "paths": {
      "$shared/*": ["../shared/*"]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compileOnSave": true,
  "include": ["src"]
}
