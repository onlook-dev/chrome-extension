{
  "name": "hosted",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "docker-compose up --build",
    "remote": "docker-compose up",
    "publish": "concurrently \"npm run publish:client\" \"npm run publish:server\"",
    "publish:arm": "DOCKER_DEFAULT_PLATFORM=\"linux/arm64\" npm run publish",
    "publish:amd": "DOCKER_DEFAULT_PLATFORM=\"linux/amd64\" npm run publish",
    "publish:client": "docker build -t hoakiet98/onlook-client ./client && docker push hoakiet98/onlook-client",
    "publish:server": "docker build -t hoakiet98/onlook-server ./server && docker push hoakiet98/onlook-server"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^8.2.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
